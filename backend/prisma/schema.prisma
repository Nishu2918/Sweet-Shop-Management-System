datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     String   @default("user")
  createdAt DateTime @default(now())
}

model Sweet {
  id       Int      @id @default(autoincrement())
  name     String
  category String
  price    Float
  quantity Int
  createdAt DateTime @default(now())
}
